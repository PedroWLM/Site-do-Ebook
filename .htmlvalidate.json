{
  "extends": [
    "html-validate:recommended"
  ],
  "rules": {
    "attribute-boolean-style": "error",
    "void-style": "error",
    "no-inline-style": "off",
    "require-sri": "off",

    "element-required-attributes": [
      "error",
      [
        {
          "element": "a[target=_blank]",
          "attributes": [
            { "name": "rel", "pattern": "noopener noreferrer" }
          ]
        }
      ]
    ],

    "attr-req-aria-hidden-for-icon": [
      "warn",
      {
        "selector": "i[data-lucide], svg[aria-hidden], i[aria-hidden]",
        "message": "√çcones decorativos devem ter aria-hidden=\"true\""
      }
    ]
  }
}
